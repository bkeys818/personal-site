---
import { menu, socials } from '../links.json'
---

<header class="bg-slate-500">
  <div class="page-width py-4 flex items-center justify-between">
    <p class="text-2xl font-bold">Ben Keys</p>
    <nav class="hidden sm:block">
      <ul class="flex gap-6">
        {
          menu.map(link => (
            <li>
              <a href={link.href}>{link.name}</a>
            </li>
          ))
        }
      </ul>
    </nav>
    <div class="hidden gap-4 sm:flex">
      {socials.map(social => <a href={social.href}>{social.logo}</a>)}
    </div>
    <a class="sm:hidden" href="#header-modal">MENU</a>
  </div>
</header>
<div class="modal flex flex-col gap-8 bg-white p-6" id="header-modal">
  <a href="#" class="ml-auto">&#x2715</a>
  <a href="/" class="text-center text-4xl font-light">Ben Keys</a>
  <nav class="grow text-center">
    <ul>
      {
        socials.map(social => (
          <li>
            <a href={social.href}>{social.logo}</a>
          </li>
        ))
      }
    </ul>
  </nav>
  <div class="flex justify-center gap-4">
    {socials.map(social => <a href=".">{social}</a>)}
  </div>
</div>
