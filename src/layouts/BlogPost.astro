---
import Layout from '@layouts/Layout.astro'

export interface Props {
  title: string,
  desc: string,
}

const {
  frontmatter: {
    title,
    desc
  }
} = Astro.props
---

<Layout title={title} desc={desc + " Author: Ben Keys."}>
  <article class="max-w-3xl">
    <slot />
  </article>
</Layout>
